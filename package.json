{
  "private": true,
  "name": "seaade-2016",
  "homepage": "http://seaade2016.vn/",
  "sitename": "27th SEAADE Annual Meeting - 2016 (SEAADE 2016)",
  "scripts": {
    "lint:js": "eslint --fix .",
    "lint:css": "stylelint \"web_modules/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "start": "statinamic start",
    "build": "statinamic build",
    "pretest": "npm run lint:js",
    "test": "npm run build",
    "deploy": "surge dist seaade.khoanguyen.me"
