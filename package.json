  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-1"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/jsx-no-literals": 0,
      "max-len": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-plugin-webpack-loaders": "^0.3.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "invariant": "^2.1.1",
    "history": "^2.0.0",
    "react": "^15.0.0-rc.2",
    "react-dom": "^15.0.0-rc.2",
    "react-helmet": "^2.1.0",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.0",
    "redux": "^3.0.0",
    "webpack": "^1.12.1",
    "whatwg-fetch": "^0.9.0",
    "babel-eslint": "^4.1.6",
    "babel-preset-stage-1": "^6.3.13",
    "css-loader": "^0.17.0",
    "eslint": "^1.7.2",
    "eslint-config-i-am-meticulous": "^2.0.0",
    "eslint-loader": "^1.1.0",
    "eslint-plugin-react": "^3.6.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.1",
    "json-loader": "^0.5.2",
    "postcss-loader": "^0.7.0",
    "style-loader": "^0.12.3",
    "stylelint": "^4.0.0",
    "stylelint-config-standard": "^2.0.0",
    "statinamic": "^0.9.2"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.6",
    "classnames": "^2.2.3",
    "node-sass": "^3.4.2",
    "react-bootstrap": "^0.28.3",
    "react-window-resize-listener": "^1.0.0",
    "sass-loader": "^3.1.2",
    "smoothscroll": "^0.2.2"
  }
